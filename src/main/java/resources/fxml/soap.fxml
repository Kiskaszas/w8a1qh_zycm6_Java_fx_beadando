<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.SoapController">
    <top>
        <HBox spacing="10">
            <TextField fx:id="filterField" promptText="Filter"/>
            <Button text="Download All" onAction="#onDownloadAllClicked"/>
            <Button text="Filtered Download" onAction="#onFilteredDownloadClicked"/>
            <Button text="Show Graph" onAction="#onShowGraphClicked"/>
        </HBox>
    </top>
    <center>
        <TextArea fx:id="resultArea"/>
    </center>
</BorderPane>